# ===========================================================================
# AI Employee Vault — Environment Variables Template (Platinum Tier)
# ===========================================================================
# Copy this file to .env and fill in your values.
# ⚠️ NEVER commit the .env file to version control!
# ===========================================================================

# ── Agent Mode ────────────────────────────────────────────────────────────
# Options: "standalone" (Gold-tier), "cloud" (Cloud VM), "local" (Local PC)
AGENT_MODE=standalone

# ── Gmail / Google OAuth2 ──────────────────────────────────────────────────
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_USER_EMAIL=

# ── WhatsApp Watcher (Playwright) ─────────────────────────────────────────
# LOCAL-ONLY: WhatsApp session never stored on Cloud
WHATSAPP_SESSION_SAVED=false

# ── Email MCP Server (SMTP) ───────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=

# ── LinkedIn ──────────────────────────────────────────────────────────────
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_PERSON_URN=

# ── Twitter / X ───────────────────────────────────────────────────────────
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ── Facebook ──────────────────────────────────────────────────────────────
FACEBOOK_PAGE_TOKEN=
FACEBOOK_PAGE_ID=

# ── Instagram ─────────────────────────────────────────────────────────────
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_ACCOUNT_ID=

# ── Odoo Accounting ───────────────────────────────────────────────────────
# Cloud VM: draft-only | Local: full access
ODOO_URL=
ODOO_DB=
ODOO_USERNAME=
ODOO_PASSWORD=

# ── Google Calendar ───────────────────────────────────────────────────────
GOOGLE_CALENDAR_ID=primary

# ── Bank / Finance ────────────────────────────────────────────────────────
# LOCAL-ONLY: Banking credentials never stored on Cloud
BANK_NAME=
BANK_BALANCE_LAST_KNOWN=0.00
BANK_CURRENCY=USD

# ── Cloud Deployment (Platinum Tier) ──────────────────────────────────────
CLOUD_VM_HOST=
CLOUD_VM_USER=
CLOUD_SYNC_REMOTE=
CLOUD_SYNC_BRANCH=main
CLOUD_SYNC_INTERVAL=60

# ── Operational Settings ──────────────────────────────────────────────────
DRY_RUN=true
RATE_LIMIT_ACTIONS_PER_MINUTE=5
LOG_LEVEL=INFO
